<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipe_widget_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_b_black"
    android:orientation="vertical"
    android:padding="@dimen/sixteen_dp">

    <TextView
        android:id="@+id/widget_item_recipe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        tools:text="@string/widget_title" />

    <TextView
        android:id="@+id/widget_item_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        tools:text="@string/widget_list" />
</LinearLayout>