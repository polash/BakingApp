<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimens/forty_dp"
    android:layout_marginBottom="@dimen/two_dp"
    android:layout_marginEnd="@dimen/eight_dp"
    android:layout_marginLeft="@dimen/eight_dp"
    android:layout_marginRight="@dimen/eight_dp"
    android:layout_marginStart="@dimen/eight_dp"
    app:cardCornerRadius="@dimen/ten_dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/four_dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_step_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/eight_dp"
            android:layout_marginStart="@dimen/eight_dp"
            android:layout_marginTop="@dimen/eight_dp"
            android:textSize="@dimen/text_size_sixteen_sp"
            tools:ignore="RelativeOverlap"
            tools:text="0." />

        <TextView
            android:id="@+id/list_step_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eight_dp"
            android:textSize="@dimen/text_size_sixteen_sp"
            tools:ignore="RelativeOverlap"
            tools:text="@string/recipe_steps_title" />

    </LinearLayout>

</android.support.v7.widget.CardView>