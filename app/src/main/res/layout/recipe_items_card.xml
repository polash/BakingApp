<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/two_dp"
    android:layout_marginLeft="@dimen/eight_dp"
    android:layout_marginRight="@dimen/eight_dp"
    android:layout_marginTop="@dimen/four_dp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/ten_dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/eight_dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/recipe_image_view"
            android:layout_width="@dimen/image_layout_height"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/four_dp"
            android:src="@drawable/recipe_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/eight_dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recipe_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_twnty_five_sp"
                tools:text="@string/recipe_title" />

            <TextView
                android:id="@+id/recipe_serving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_eightn_sp"
                tools:text="@string/recipe_servings" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>